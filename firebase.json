{
  "hosting": {
    "public": "dist",
    "ignore": [],
    "predeploy": "rm -rf ./dist && npm run build",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/googleApiEndpointHttps/**",
        "function": "googleApiEndpointHttps",
        "region": "europe-west1"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ]
}
